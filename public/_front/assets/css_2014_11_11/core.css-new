html, body { height: 100%; }
body, #container { *zoom: 1; }
body:before, body:after, #container:before, #container:after { display: table; content: ""; line-height: 0; }
body:after, #container:after { clear: both; }

#container { position: relative; width: 100%; min-height: 100%; z-index: 1; }
.wrap { clear: both; float: left; position: relative; width: 100%; margin: 0; z-index: 1; }
.wrap.header { background: none repeat scroll 0% 0% rgb(66, 139, 202); height: 7em; border-top: solid 5px #A6C8E6; box-shadow: 0 0 5px 0 rgba(0,0,0,0.75); z-index: 2; }
.wrap.footer { background: #A6C8E6; color: #FFF; height: 7em; padding: 1em 0; z-index: 0; margin-top:2em; }
.wrap.content { min-height: 1%; z-index: 0; }

header, footer { position: relative; width: 100%; margin:0 auto; }
