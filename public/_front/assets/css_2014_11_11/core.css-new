    background: none;
    color: #FFFFFF;
}
.navbar-inverse .navbar-nav > li > a {color:#FFF;}

footer { font-size: 12px; font-weight: 300; color: #333; padding-top: 15px; }
footer a { color: #333; }
footer ul { width: 100%; margin: 0; list-style:none; }
footer ul > li.pull-left small { display: block; color: #333; }
footer ul > li.pull-right { font-size: 11px; text-align: right; }
footer ul > li.pull-right div:first-child { margin-bottom: 5px; }
footer ul > li.pull-right div:first-child a { margin-left: 10px; }
.msie footer { font-weight: 400; } 
